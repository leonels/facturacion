Client: <%= @invoice.organization.name %>

<table id="invoice_items">
<tr>
  <th>Item</th>
  <th>Unit Cost</th>
  <th>Qty</th>
  <th>Line Total</th>
</tr>
<% @invoice.line_items.each do |line_item| %>
  <tr>
    <td><%= line_item.item.name %></td>
    <td><%= number_to_currency line_item.item.cost %></td>
    <td><%= line_item.quantity %></td>
    <td><%= number_to_currency line_item.line_total %></td>
  </tr>
<% end %>
<tr>
<td colspan="4">Subtotal <%= number_to_currency @invoice.subtotal %></td>
</tr>
</table>

<hr />

<%= link_to 'Edit', edit_invoice_path(@invoice) %> |
<%= link_to 'Back', invoices_path %>
